{% apply inline_css %}
    <style>

        .container {
            max-width: 600px;
            margin: 20px auto;
            background: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        .header {
            background: #2d89ef;
            color: white;
            text-align: center;
            padding: 20px;
            font-size: 20px;
        }
        .content {
            padding: 20px;
            color: #333;
            line-height: 1.6;
        }
        .footer {
            background: #f4f4f7;
            color: #999;
            font-size: 12px;
            text-align: center;
            padding: 10px;
        }
        a.button {
            display: inline-block;
            margin: 15px 0;
            padding: 12px 20px;
            background: #2d89ef;
            color: white !important;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>

<div class="container">
    <div class="header">
        {{ subject|default('Linos Store') }}
    </div>
    <div class="content">
        {% block content %}
            {{ content }}
        {% endblock %}
    </div>
    <div class="footer">
        {{ footer|default("© " ~ "now"|date("Y") ~ " Linos Store. Tous droits réservés.") }}
    </div>
</div>
{% endapply %}